doctype html
head
    title="Real Time Web Chat"
    link(rel='stylesheet', href='/css/bootstrap.css')
    link(rel='stylesheet' href='/css/style.css')
    script(src="https://code.jquery.com/jquery-3.1.1.min.js")
    script(src='/js/bootstrap.js')
    script(src='js/main.js')
    script(src='/socket.io/socket.io.js')

body
    nav.navbar.navbar-inverse
        .container
            .navbar-header
                button.navbar-toggle.collapse(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href='#') Chat App
        #navbar-collapse.navbar-collapse
            ul.nav.navbar-nav
    .container
        .row
            .col-md-8
                #userFormWrap
                    h1 Create Username
                    form#userForm
                        input#username.form-control(name='username', type='text', placeholder='Enter username')
                        br
                        button.btn.btn-default(type='submit') Submit
                #mainWrap
                    h1 Speak Your Mind
                    form#chatForm
                        .form-group
                        textarea#chatInput.form-control(name='chatInput', placeholder='Say something...')
                        br
                        button.btn.btn-default(type='submit') Submit
                        br
                        br
                    #chatWindow.well
            .col-md-4
                h3 Chat Users
                ul.list-group
                    #users
